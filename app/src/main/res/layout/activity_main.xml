<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_brown"
    tools:context=".MainActivity"
    android:weightSum="1280">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="140"
        android:background="@drawable/main_topbar"
        android:orientation="vertical"
        android:weightSum="140">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="34"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="72"
            android:orientation="horizontal"
            android:weightSum="720">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"></View>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="72"
                android:background="@drawable/home_icon"></androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="480">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/manage_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setting_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="72"
                android:background="@drawable/setting_icon"></androidx.appcompat.widget.AppCompatButton>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="34"></View>



    </LinearLayout>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="708"
       android:background="@drawable/main_image"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="162"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="580"
            android:background="@drawable/brown_btn_img"
            android:text="@string/start_text"
            android:textColor="#ffffff"></androidx.appcompat.widget.AppCompatButton>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"></View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/let_out_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="580"
        android:background="@drawable/white_btn_img"
        android:text="@string/let_out"
        android:textColor="@color/main_brown"></androidx.appcompat.widget.AppCompatButton>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"></LinearLayout>

</LinearLayout>