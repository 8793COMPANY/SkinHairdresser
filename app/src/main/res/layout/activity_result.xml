<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/result_background_ko"
    tools:context=".ResultActivity"
    android:weightSum="1280">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="140"
        android:orientation="vertical"
        android:weightSum="140">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="34"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="72"
            android:orientation="horizontal"
            android:weightSum="720">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"></View>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="72"
                android:background="@drawable/back_btn"></androidx.appcompat.widget.AppCompatButton>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="496"
                android:text="진단 결과"
                android:textColor="@color/main_brown"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"></TextView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="112"></View>



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_brown"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="49"></LinearLayout>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:gravity="center"
        android:text="백혜진님은 수분이 부족하네요!"
        android:textSize="18dp"
        android:textColor="@color/main_brown"></TextView>

    <TextView
        android:id="@+id/advice_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46"
        android:gravity="center"
        android:textColor="@color/main_brown"
        android:text="충분한 물 섭취가 필요합니다"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="129"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="450"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="135"></View>

        <ImageView
            android:id="@+id/result_graph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="450"
            android:background="@drawable/result_img1"></ImageView>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="135"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="139"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_more_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="580"
            android:background="@drawable/brown_btn_img"
            android:text="@string/result_more_text"
            android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/let_out_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="580"
            android:background="@drawable/white_btn_img"
            android:text="@string/let_out"
            android:textColor="@color/main_brown"></androidx.appcompat.widget.AppCompatButton>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"></LinearLayout>


</LinearLayout>